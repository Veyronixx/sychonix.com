---
import Layout from '~/layouts/PageLayout.astro';
import { getImagePath } from '~/utils/imageUtils.js';

import type { MetaSEO } from '~/types';

export interface Props {}

const { frontmatter } = Astro.props;

const meta: MetaSEO = {
  title: frontmatter?.title,
};

const iconPath = getImagePath(frontmatter.icon);
---

<style>
  .circular-icon {
    width: 5rem;
    height: 5rem;
    border-radius: 50%;
    overflow: hidden;
    display: inline-block;
    background-color: rgba(255, 255, 255, 0); /* Optional: background color for the icon */
  }
  .circular-icon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>

<Layout {meta}>
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl text-white">
    <div class="text-center pb-5 md:pb-5 max-w-5xl mx-auto">
      <div class="circular-icon">
        {iconPath ? <img src={iconPath} alt="Icon" class="w-full h-full" /> : null}
      </div>
      <h1 class="text-1xl md:text-[2.50rem] font-bold leading-tighter tracking-tighter mb-4 font-heading text-white">
        {frontmatter.title}
      </h1>
    </div>
    <div
      class="mx-auto prose prose-lg max-w-4xl light:prose-invert light:prose-headings:text-white prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-blue-600 light:prose-a:text-blue-100 prose-img:rounded-md prose-img:shadow-lg mt-8 text-white"
    >
      <slot />
    </div>
  </section>
</Layout>
