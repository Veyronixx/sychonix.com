---
import '~/assets/styles/base.css';

import MetaTags from '~/components/common/MetaTags.astro';
import BasicScripts from '~/components/common/BasicScripts.astro';

import type { MetaSEO } from '~/types';
import { SITE } from '~/config.mjs';

export interface Props {
  meta?: MetaSEO;
}

const { meta = {} } = Astro.props;
const { language = 'en', textDirection = 'ltr' } = SITE;
---

<!DOCTYPE html>
<html lang={language} dir={textDirection} class="2xl:text-[20px]">
  <head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <MetaTags {...meta} />
  </head>

  <body class="relative overflow-x-hidden text-gray-300 bg-[#0b0c10]">

    <!-- Background Image Hanya Setengah Tinggi -->
    <div class="absolute top-0 left-0 w-full h-[60vh] bg-cover bg-center bg-no-repeat z-[-10]" 
         style="background-image: url('/bekgron1.png');">
    </div>
  
    <!-- Gradasi Halus ke Hitam -->
    <div class="absolute top-0 left-0 w-full h-[60vh] bg-gradient-to-b from-black/0 to-[#0b0c10] z-[-9]"></div>
  
    <slot />
  
    <BasicScripts />
  
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
  
</html>
