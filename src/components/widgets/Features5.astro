---

<section class="scroll-mt-16" id="features2">
  <div class="absolute inset-0 bg-primary-50 dark:bg-slate-800 pointer-events-none mb-32" aria-hidden="true"></div>
  <div class="relative max-w-6xl mx-auto px-4 sm:px-6">
    <div class="py-4 pt-8 sm:py-6 lg:py-8 lg:pt-12">
      <div class="mb-8 text-center">
        <h2 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading text-slate-300">
          Networks
        </h2>
        <div class="flex justify-center space-x-4">
          <button 
            class={`btn-category ${category === 'mainnet' ? 'active' : ''}`} 
            onClick={() => setCategory('mainnet')}
          >
            Mainnet
          </button>
          <button 
            class={`btn-category ${category === 'testnet' ? 'active' : ''}`} 
            onClick={() => setCategory('testnet')}
          >
            Testnet
          </button>
        </div>
      </div>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4 items-center my-12 dark:text-white">
        {
          filteredItems.map(({ title, icon, description, Link }) => (
            <div class="card flex flex-col bg-gray-900 rounded-lg shadow-xl hover:shadow-lg transition transform hover:-translate-y-2 border border-gray-700 text-center">
              <div class="flex p-4">
                <div class="icon-container w-12 h-12 rounded-full overflow-hidden bg-white flex-shrink-0">
                  <Icon name={icon} class="w-full h-full object-cover" />
                </div>
                <div class="ml-4 text-left">
                  <h3 class="title text-sm font-semibold text-white">{title}</h3>
                  <p class="description text-xs text-gray-400">{description}</p>
                </div>
              </div>
              <div class="flex justify-between mt-auto p-4">
                <a href={Link} class="btn-stake flex-1 mx-1 px-3 py-1 bg-blue-500 text-white rounded-lg hover:bg-blue-700 text-xs">Stake</a>
                <a href={Link} class="btn-service flex-1 mx-1 px-3 py-1 bg-gray-700 text-white rounded-lg hover:bg-gray-900 text-xs">Service</a>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .btn-category {
    padding: 8px 16px;
    background-color: #374151;
    color: white;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .btn-category:hover {
    background-color: #1f2937;
  }

  .btn-category.active {
    background-color: #2563eb;
  }

  .card {
    background-color: rgb(15 23 42);
    border-radius: 1.5rem; /* 24px */
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    text-align: center;
    transition: transform 0.2s ease-in-out;
    border: 2px solid rgb(31 41 55); 
  }
  
  .icon-container {
    border-radius: 50%;
    background-color: #000000;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 48px;
    width: 48px;
    overflow: hidden;
  }
  
  .title {
    font-size: 14px;
    font-weight: 600;
    margin: 4px 0;
  }
  
  .description {
    font-size: 12px;
    color: #9CA3AF;
  }
  
  .btn-stake,
  .btn-service {
    border-radius: 0.5rem;
    padding: 4px 8px;
    font-size: 12px;
    transition: background-color 0.3s ease;
  }
  
  .btn-stake {
    background-color: #2563eb;
  }
  
  .btn-service {
    background-color: #374151;
  }
  
  .btn-stake:hover {
    background-color: #1d4ed8;
  }
  
  .btn-service:hover {
    background-color: #1f2937;
  }
</style>
