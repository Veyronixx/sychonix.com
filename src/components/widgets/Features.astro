---
import { Icon } from 'astro-icon';

const items = [
  [
    {
      title: 'Blockchain Infrastructure',
      description: 'We provide secure, reliable, and high-performance blockchain infrastructure with 24/7 monitoring across multiple networks.',
      icon: 'tabler:server',
    },
    {
      title: 'Validator Resources',
      description: 'Offering technical guides, node installation tutorials, and validator tools to help operators easily join and contribute to networks.',
      icon: 'tabler:book',
    },
  ],
  [
    {
      title: 'Multi-chain Explorer',
      description: 'Real-time explorer for cross-chain data visibility, helping users monitor, explore, and interact with blockchain networks seamlessly.',
      icon: 'tabler:world',
    },
    {
      title: 'Governance & Compliance',
      description: 'Actively involved in governance, upgrades, and network proposals to maintain decentralization, security, and ecosystem growth.',
      icon: 'tabler:shield-check',
    },
  ],
];

---

<section id="service" class="relative scroll-mt-16 bg-black overflow-hidden">

  <!-- Stars Background -->
  <div class="absolute inset-0 pointer-events-none">
    {Array.from({ length: 6 }).map((_, index) => (
      <div class="star-down" style={`left: ${Math.random() * 100}%; animation-delay: ${Math.random() * 10}s;`}></div>
    ))}
  </div>

  <!-- Floating Planets -->
  <div class="absolute top-[20%] left-[10%] w-32 sm:w-40 h-32 sm:h-40 opacity-20 animate-spin-slow animate-floating pointer-events-none">
    <img src="/sychonix-planet.png" alt="Planet Sychonix" class="w-full h-full object-cover rounded-full drop-shadow-[0_0_40px_rgba(59,130,246,0.3)]" />
  </div>

  <div class="absolute top-[15%] right-[20%] w-16 sm:w-20 h-16 sm:h-20 opacity-30 animate-spin-slow animate-floating pointer-events-none">
    <img src="/planet.jpg" alt="Planet" class="w-full h-full object-cover rounded-full drop-shadow-[0_0_30px_rgba(29,78,216,0.3)]" />
  </div>

  <!-- Main Content -->
  <div class="relative z-10 px-4 py-14 sm:py-16 md:py-20 mx-auto max-w-6xl lg:px-8">
    <div class="mb-8 sm:mb-10 md:mb-12 max-w-3xl mx-auto text-center">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-extrabold tracking-tight text-white leading-tight">
        What you need to know about <span class="text-blue-500">Us</span>
      </h2>
    </div>

    <div class="services__container grid grid-cols-1 md:grid-cols-2 gap-4">
      {items.map((subitems) => (
        <div class="space-y-5 sm:px-1">
          {subitems.map(({ title, description, icon }) => (
            <div class="card service p-5 bg-black/30 backdrop-blur-sm border border-blue-700/30 rounded-xl transition-all duration-300 hover:scale-105 hover:border-blue-500">
              <div class="flex flex-col items-start text-left gap-3">
                <div class="service__icon w-10 h-10 bg-blue-700 flex items-center justify-center rounded-md shadow-md">
                  {icon && <Icon name={icon} class="w-6 h-6 text-white" aria-label={title} />}
                </div>
                <h4 class="text-lg font-semibold text-white">{title}</h4>
                <p class="text-gray-400 text-sm">{description}</p>
              </div>
            </div>
          ))}
        </div>
      ))}
    </div>
  </div>
</section>


<style>
  /* Layout dan Konten Layanan */
  .services__container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  }

  .card {
    padding: 1.25rem;
    border-radius: 0.75rem;
    border: 1px solid rgba(29, 78, 216, 0.2);
    background-color: rgba(13, 17, 23, 0.3);
    transition: transform 0.3s ease, border-color 0.3s ease, background-color 0.3s ease;
    box-shadow: 0 0 10px rgba(56,189,248,0.05);
    height: 210px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    max-width: 540px;
  }

  .card:hover {
    transform: translateY(-0.5rem) scale(1.02);
    border-color: rgb(59, 130, 246);
    background-color: rgba(13, 17, 23, 0.5);
    box-shadow: 0 0 20px rgba(56,189,248,0.15);
  }

  .service__icon {
    transition: background-color 0.3s ease;
  }
  
  .service:hover .service__icon {
    background-color: rgb(29, 78, 216);
  }
  
  .service h4 {
    font-size: 1rem;
  }
  
  .service p {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.875rem;
    line-height: 1.4;
  }

  @keyframes spin-slow {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  .animate-spin-slow {
    animation: spin-slow 120s linear infinite;
  }
  @keyframes floating {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}
.animate-floating {
  animation: floating 8s ease-in-out infinite;
}
@keyframes twinkle {
  0%, 100% { opacity: 0.4; }
  50% { opacity: 1; }
}

/* Stars Falling Down */
.star-down {
  position: absolute;
  top: -10px;
  width: 2px;
  height: 2px;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 50%;
  animation: starFall 10s linear infinite;
}

@keyframes starFall {
  0% { transform: translateY(0); opacity: 1; }
  100% { transform: translateY(100vh); opacity: 0; }
}

/* Planet Animations */
@keyframes spin-slow {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
.animate-spin-slow {
  animation: spin-slow 120s linear infinite;
}
@keyframes floating {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}
.animate-floating {
  animation: floating 8s ease-in-out infinite;
}
/* Responsive */
@media screen and (max-width: 600px) {
  .card {
    height: auto;
    padding: 1rem;
  }
}
/* Media Query untuk Mobile */
@media (max-width: 767px) {
  .grid {
    display: flex;
    flex-direction: column;
    align-items: center; /* Center cards horizontally */
  }

  .card {
    width: 100%; /* Set card width to 100% of its container */
    max-width: 300px; /* Ensure cards do not get too wide */
    margin: 8px 0; /* Add vertical margin for spacing */
  }
}
</style>
