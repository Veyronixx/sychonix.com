---
import { Icon } from 'astro-icon';

const items = [
  [
    {
      title: 'Highly Secured',
      description: 'Sychonix is highly secured with 24/7 monitoring, ensuring the integrity and safety of transactions and stakeholder assets.',
      icon: 'tabler:rocket',
    },
    {
      title: 'Interchain-Explorer',
      description: 'Our fast and reliable Interchain Explorer facilitates seamless navigation and interaction between blockchain networks, enhancing accessibility and user experience.',
      icon: 'tabler:components',
    },
  ],
  [
    {
      title: 'Service Guide',
      description: 'We provide comprehensive setup documents and guides for our community, empowering users to navigate and utilize our platform effectively.',
      icon: 'tabler:book',
    },
    {
      title: 'Fully Comply',
      description: 'We fully comply with blockchain governance protocols, actively participating in chain governance, updates, and upgrades to ensure network stability and innovation.',
      icon: 'tabler:bulb',
    },
  ],
];
---

<section id="services" class="scroll-mt-16">
  <div class="px-4 py-16 mx-auto max-w-6xl lg:px-8 lg:py-20">
    <div class="mb-10 md:mx-auto sm:text-center md:mb-12 max-w-3xl">
      <h2 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
        What you need to know about <span class="whitespace-nowrap">Us</span>
      </h2>
    </div>
    <div class="services__container">
      {items.map((subitems) => (
        <div class="space-y-4 sm:px-1"> <!-- Mengganti space-y-6 dengan space-y-4 -->
          {subitems.map(({ title, description, icon }) => (
            <div class="card service">
              <div class="flex items-start gap-4">
                <div class="service__icon flex items-center justify-center w-10 h-10 bg-fuchsia-700"> <!-- Ukuran ikon dikurangi -->
                  {icon && <Icon name={icon} class="w-5 h-5 text-white" />} <!-- Ukuran ikon dikurangi -->
                </div>
                <div>
                  <h4 class="mb-2 text-base font-semibold">{title}</h4> <!-- Ukuran judul dikurangi -->
                  <p class="text-gray-300 text-sm">{description}</p> <!-- Ukuran deskripsi dikurangi -->
                </div>
              </div>
            </div>
          ))}
        </div>
      ))}
    </div>
  </div>
</section>


<style>
  .services__container {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 1.5rem; /* Mengurangi jarak antar kartu */
  }
  
  .card {
  background-color: rgba(90, 33, 182, 0);
  padding: 0.75rem;
  border: 1px solid rgb(13, 114, 255);
  border-radius: 0.75rem;
  border-color: rgb(13, 114, 255);
  transition: transform 0.3s ease, background-color 0.3s ease, border-color 0.3s ease;
  min-height: 180px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  max-width: 650px;
  position: -webkit-sticky; /* Safari */
  top: 0; /* Adjust as needed */
}

  .card:hover {
    background-color: rgba(13, 114, 255, 0.26);
    border-color: rgb(13, 114, 255);
    transform: translateY(-0.5rem);
  }

  .service__icon {
    background-color: rgb(13, 114, 255);
    padding: 0.5rem;
    border-radius: 0.5rem;   /* 6px */
    font-size: 1.25rem;
    color: var(--color-black);
    transition: var(--transition);
  }
  
  .service:hover .service__icon {
    background-color: rgb(29 78 216);
    color: var(--color-white);
  }

  .service h4 {
    font-size: 1rem; /* 16px */
    margin-bottom: 0.5rem;
  }
  
  .service p {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.875rem; /* 14px */
  }
  
/* MEDIA QUERIES (tablets) */
@media screen and (max-width: 1024px) {
  .services__container {
    gap: 1.5rem;
  }
}

/* MEDIA QUERIES (phones) */
@media screen and (max-width: 600px) {
  .services__container {
    grid-template-columns: 1fr;
    gap: 1.2rem;
  }

  .card.service {
    gap: 1.2rem;
  }
  }
</style>
