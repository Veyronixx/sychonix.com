---
import { Icon } from 'astro-icon';

const items = [
  [
    {
      title: 'Highly Secured',
      description: 'Experience unparalleled security with Sychonix Staking Service, featuring 24/7 monitoring and advanced protection.',
      icon: 'tabler:rocket',
    },
    {
      title: 'Interchain-Explorer',
      description: 'Explore the blockchain with confidence using our fast, reliable, and user-friendly interchain explorer.',
      icon: 'tabler:components',
    },
  ],
  [
    {
      title: 'Low Fees and Comission',
      description: 'Enjoy low fees and commissions with Sychonix, along with impressive uptime and zero slashing incidents.',
      icon: 'tabler:arrows-right-left',
    },
    {
      title: 'Fully Comply',
      description: 'Stay ahead in blockchain governance with our active participation in chain updates, upgrades, and community engagement.',
      icon: 'tabler:bulb',
    },
  ],
];
---

<section class="scroll-mt-16" id="features">
  <div class="px-4 py-16 mx-auto max-w-6xl lg:px-8 lg:py-20">
    <div class="mb-10 md:mx-auto sm:text-center md:mb-12 max-w-3xl">
      <p class="text-base text-primary-600 dark:text-primary-200 font-semibold tracking-wide uppercase"></p>
      <h2 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
        What you need to know about <span class="whitespace-nowrap">Us</span>
      </h2>
      <p class="max-w-3xl mx-auto sm:text-center text-xl text-gray-600 dark:text-slate-400"></p>
    </div>
    <div class="grid mx-auto space-y-6 md:grid-cols-2 md:space-y-0">
      {
        items.map((subitems) => (
          <div class="space-y-8 sm:px-8">
            {subitems.map(({ title, description, icon }) => (
              <div class="card flex flex-row max-w-md p-6">
                <div class="mb-4 mr-4">
                  <div class="flex items-center justify-center w-12 h-12 rounded-full bg-primary-500 dark:bg-primary-700">
                    {icon && <Icon name={icon} class="w-6 h-6 text-white icon-light" />}
                  </div>
                </div>
                <div>
                  <h3 class="mb-3 text-xl font-bold">{title}</h3>
                  <p class="text-gray-400 dark:text-slate-400">{description}</p>
                </div>
              </div>
            ))}
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
.card {
  background-color: #1F2937;
  border-radius: 1.5rem; /* 24px */
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
  padding: 20px;
  text-align: auto;
  transition: transform 0.2s ease-in-out;
  border: 2px solid rgb(255, 255, 255); /* Add a red border */
}
</style>
