---
import { Icon } from 'astro-icon';
import { getHomePermalink } from '~/utils/permalinks';

const links = [
  {
    title: '',
    items: [
      { title: 'Networks', href: 'https://sychonix.com/#networks' },
      { title: 'Explorer', href: 'https://explorer.sychonix.com/' },
    ],
  },
];

const social = [
  { label: 'Twitter', icon: 'tabler:brand-twitter', href: 'https://twitter.com/sychonixx' },
  { label: 'Github', icon: 'tabler:brand-github', href: 'https://github.com/sychonix' },
  { label: 'Mail', icon: 'tabler:mail', href: 'mailto:sychonixx@gmail.com' },
];
---

<footer class="border-t border-gray-700/50 bg-[url('/bekgron3.png')] bg-left bg-no-repeat bg-cover pb-10">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="grid grid-cols-12 gap-8 py-12">

      <!-- Brand -->
      <div class="col-span-12 lg:col-span-4">
        <a href={getHomePermalink()} class="inline-block font-bold text-2xl text-white tracking-tight">
          Sychonix
        </a>
        <p class="mt-4 text-sm text-gray-400 leading-relaxed">
          Decentralized Infrastructure & Validator Operator.<br />
          Empowering secure, reliable, and scalable blockchain networks.
        </p>
      </div>

      <!-- Links -->
      {links.map(({ title, items }) => (
        <div class="col-span-6 md:col-span-3 lg:col-span-2">
          {title && <h4 class="text-sm font-semibold text-gray-300 mb-4">{title}</h4>}
          <ul class="space-y-2">
            {items.map(({ title, href }) => (
              <li>
                <a href={href} class="text-gray-400 hover:text-blue-500 transition">{title}</a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom -->
    <div class="border-t border-gray-700/30 pt-6 flex flex-col md:flex-row justify-between items-center text-sm text-gray-500">
      <div class="flex space-x-4 mb-4 md:mb-0">
        {social.map(({ label, href, icon }) => (
          <a href={href} aria-label={label} class="hover:text-blue-500 transition">
            <Icon name={icon} class="w-5 h-5" />
          </a>
        ))}
      </div>

      <div>
        © {new Date().getFullYear()} Sychonix — Committed to Secure Networks.
      </div>
    </div>
  </div>
</footer>
