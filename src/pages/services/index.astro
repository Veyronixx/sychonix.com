<Layout {meta}>
  <section class="scroll-mt-16" id="services">
    <div class="absolute inset-0 bg-primary-50 dark:bg-slate-800 pointer-events-none mb-32" aria-hidden="true"></div>
    <div class="relative max-w-6xl mx-auto px-10 sm:px-20 py-15 my-15 flex items-center justify-center">
      <div class="py-4 pt-8 sm:py-6 lg:py-8 lg:pt-12">
        <div class="flex flex-col lg:flex-row justify-center items-center mb-8">
          <h2 class="text-center text-4xl md:text-5xl font-bold leading-tighter tracking-tighter font-heading text-slate-300 mb-4 lg:mb-0 mt-8">
            Sychonix Services
          </h2>
        </div>
        
<!-- Mainnet Section -->
<h3 class="text-2xl font-semibold mt-2 mb-2 ">Mainnet</h3>
<div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 items-start my-6 dark:text-white">
  {items.filter(({ description }) => description === 'mainnet').map(({ title, icon, description, Link, Link2 }) => (
    <div class="card network-card mainnet">
      <div class="flex p-4">
        <div class="icon-container w-12 h-12 rounded-full overflow-hidden bg-white flex-shrink-0">
          <img src={icon} alt={title} class="w-full h-full object-cover"/>
        </div>
        <div class="ml-4 text-left">
          <h3 class="title text-sm font-semibold text-white">{title}</h3>
        </div>
      </div>
      <div class="flex justify-between mt-auto p-4">
        <a href={Link2} target="_blank" class="btn-explorer flex-1 mx-1 px-3 py-1 bg-blue-500 text-white rounded-xl hover:bg-blue-700 text-xs">Explorer</a>
        <a href={Link} class="btn-service flex-1 mx-1 px-3 py-1 bg-gray-700 text-white rounded-xl hover:bg-gray-900 text-xs">Service</a>
      </div>
    </div>
  ))}
</div>

        
