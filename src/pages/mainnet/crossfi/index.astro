---
import { SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon';

const name= 'Crossfi Chain'; 
 const icon= 'crossfi'; 
 const network= 'Mainnet'; 
 const chain= 'mineplex-mainnet-1'; 
 const version= '0.3.0-prebuild9'; 
 const stake= 'https://explorer.sychonix.com/crossfi-mainnet/staking/mxvaloper1lf8unxkwj4qwsyhrp3qceexrm9heyh9gxllf6r'; 
 const social = [
  { label: 'Twitter', icon: 'tabler:brand-twitter', href: 'https://twitter.com/crossfichain' },
  { label: 'Discord', icon: 'tabler:brand-discord', href: 'https://discord.gg/crossfi' },
  { label: 'Chrome',  icon: 'tabler:brand-chrome', href: 'https://taplink.cc/crossfinance' },
];
 const meta = { 
         title: SITE.title, 
         description: SITE.description, 
         canonical: getCanonical(getHomePermalink()),
 };

const items = [
	{
		title: 'Explorer',
		Link: 'https://explorer.sychonix.com/crossfi-mainnet',
	},
	{
		title: 'Node installation',
		Link: 'https://sychonix.com/mainnet/crossfi/installation',
	},
  {
		title: 'RPC',
		Link: 'https://sychonix.com/mainnet/crossfi/rpc',
	},
	{
		title: 'API',
		Link: 'https://sychonix.com/mainnet/crossfi/api',
	},
	{
		title: 'CLI Cheatsheet',
		Link: 'https://sychonix.com/mainnet/crossfi/cheat-sheet',
	},
  {
		title: 'Snapshot',
		Link: 'https://sychonix.com/mainnet/crossfi/snap',
	},
  {
		title: 'Addrbook',
		Link: 'https://sychonix.com/mainnet/crossfi/addrbook',
	},
  {
		title: 'Genesis',
		Link: 'https://sychonix.com/mainnet/crossfi/genesis',
	},
]	
---

<style>
.card {
  background-color: #000000;
  border-radius: 1.5rem; /* 24px */
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
  padding: 20px;
  text-align: auto;
  transition: transform 0.2s ease-in-out;
  border-color: rgb(13, 114, 255);
}
.card:hover {
    background-color: rgba(13, 114, 255, 0.219);
    border-color: rgb(13, 114, 255);
    transform: translateY(-0.5rem);
  }

.btn-card {
  display: inline-block;
  padding: 20px;
  background-color: #000000;
  border-radius: 1.5rem; /* 24px */
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
  text-align: center;
  transition: transform 0.2s ease-in-out;
  border: 2px solid rgb(13, 114, 255); /* white border */
  color: white;
  text-decoration: none;
  font-weight: bold;
}
.social-icons a {
    display: inline-block; /* Ensure it's block-level for transform to work */
    transition: transform 0.2s ease-in-out, border-radius 0.2s ease-in-out; /* Smooth transition for the transform and border-radius effect */
  }

  .social-icons a:hover {
    transform: translateY(-0.5rem); /* Move up on hover */
    border-radius: 50%; /* Make the icon rounded on hover */
  }
</style>

<style>
  .card {
    background-color: #1F2937;
    border-radius: 1.5rem; /* 24px */
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    padding: 20px;
    text-align: auto;
    transition: transform 0.2s ease-in-out;
    border: 2px solid rgb(255, 255, 255); /* white border */
  }
  .btn-card:hover {
    background-color: rgba(13, 114, 255, 0.219);
    border-color: rgb(13, 114, 255);
    transform: translateY(-0.5rem);
  }
  .label-hover {
    background-color: rgba(13, 114, 255, 0.219);
    border-color: rgb(13, 114, 255);
    transform: translateY(-0.5rem);
  }
  .btn-card {
    display: inline-block;
    padding: 20px;
    background-color: #1F2937;
    border-radius: 1.5rem; /* 24px */
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    text-align: center;
    transition: transform 0.2s ease-in-out;
    border: 2px solid rgb(255, 255, 255); /* white border */
    color: white;
    text-decoration: none;
    font-weight: bold;
  }
  .social-icons {
    margin-top: 0.3rem; /* Adjust spacing as needed */
  }
  .social-icons a {
    display: inline-block; /* Ensure it's block-level for transform to work */
    transition: transform 0.2s ease-in-out; /* Smooth transition for the transform effect */
  }
  </style>
  
  <Layout {meta}>
    <section>
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="py-10 md:py-20">
          <div class="text-center pb-5 md:pb-5 max-w-5xl mx-auto">
            <Icon name={icon} class="w-20 h-20 inline-block align-text-bottom rounded-full" />
            <h1 class="text-1xl md:text-[2.50rem] font-bold leading-tighter tracking-tighter mb-4 font-heading">
              Service {name}
            </h1>
            <a class="btn-card" href={stake} target="_blank">
              Stake with me
            </a>
          </div>
          <section class="bg-primary-100 dark:bg-slate-800 items-center">
            <div class="bg-transparent px-2 sm:px-2 py-0 text-md text-center font-medium">
              <ul>
                <li>
                  <span class="font-bold">Network Type:</span> {network}
                </li>
                <li>
                  <span class="font-bold">Chain-id:</span> {chain}
                </li>
              </ul>
              <!-- Add margin-top to the social icons container -->
              <div class="social-icons">
                {social.map((item) => (
                  <a href={item.href} target="_blank" rel="noopener noreferrer" key={item.label}>
                    <Icon name={item.icon} class="w-8 h-7 inline-block align-text-bottom" />
                  </a>
                ))}
              </div>
            </div>
          </section>
          <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 items-start my-10 dark:text-white">
            {items.map(({ title, Link }) => (
              <a href={Link} target={title === 'Explorer' || title === 'Stake with me' ? '_blank' : '_self'}>
                <div class="card">
                  <div class="flex items-center mb-4 text-center">
                    <div class="ml-4 text-xl font-bold text-center">{title}</div>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      </div>
    </section>
  </Layout>
  