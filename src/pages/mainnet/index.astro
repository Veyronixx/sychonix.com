<Layout {meta}>
  <section class="scroll-mt-16" id="networks">
    <div class="absolute inset-0 bg-primary-50 dark:bg-slate-800 pointer-events-none mb-32" aria-hidden="true"></div>
    <div class="relative max-w-6xl mx-auto px-10 sm:px-20 py-15 my-15">
