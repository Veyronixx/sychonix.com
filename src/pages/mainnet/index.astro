      position: relative;
      color: white;
    }
  
    .card {
      background-color: rgb(15 23 42);
      border-radius: 1.5rem;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
      border: 1px solid rgb(13, 114, 255);
      overflow: hidden;
      transition: transform 0.3s ease, background-color 0.3s ease, border-color 0.3s ease;
      text-align: center;
      width: 300px;
      padding-bottom: 10px;
      margin-bottom: 4px;
    }
  
    .card:hover {
      background-color: rgba(13, 114, 255, 0.219);
      border-color: rgb(13, 114, 255);
      transform: translateY(-0.5rem);
    }
  
    .card .flex {
