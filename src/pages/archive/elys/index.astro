---
import { SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon';

const name= 'Elys'; 
 const icon= 'elys'; 
 const network= 'archive'; 
 const chain= 'elysarchive-1'; 
 const version= 'v0.5.4'; 
 const stake= 'https://explorer.sychonix.com/elys/staking/elysvaloper1fwa706sz0yryfr3efsj5k97rwt5swjxflrn4eq'; 
 const social = [
  { label: 'Twitter', icon: 'tabler:brand-twitter', href: 'https://twitter.com/elys_network' },
  { label: 'Discord', icon: 'tabler:brand-discord', href: 'https://discord.gg/R35nF83V8u' },
  { label: 'Chrome',  icon: 'tabler:brand-chrome', href: 'https://elegant-mollusk-fb0.notion.site/90e05e01b2d24a50a99d29076cf8c612?v=63961117319c43c29ec7ce53190cd59d' },
];
 const meta = { 
         title: SITE.title, 
         description: SITE.description, 
         canonical: getCanonical(getHomePermalink()),
 };

const items = [
	{
		title: 'Explorer',
		Link: 'https://explorer.sychonix.com/elys',
	},
	{
		title: 'Node installation',
		Link: 'https://sychonix.com/archive/elys/installation',
	},
  {
		title: 'Genesis file',
		Link: 'https://sychonix.com/archive/elys/genesis',
	},
  {
		title: 'Addrbook',
		Link: 'https://sychonix.com/archive/elys/addrbook',
	},
	{
		title: 'CLI Cheatsheet',
		Link: 'https://sychonix.com/archive/elys/cheat',
	},
]	
---

<style>
  .card {
    background-color: #000000;
    border-radius: 1.5rem; /* 24px */
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    padding: 20px;
    text-align: auto;
    transition: transform 0.2s ease-in-out;
    border-color: rgb(13, 114, 255);
  }
  
  .btn-card {
    display: inline-block;
    padding: 20px;
    background-color: #000000;
    border-radius: 1.5rem; /* 24px */
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    text-align: center;
    transition: transform 0.2s ease-in-out;
    border: 2px solid rgb(13, 114, 255); /* white border */
    color: white;
    text-decoration: none;
    font-weight: bold;
  }
  </style>
  
  <style>
    .card {
      background-color: #1F2937;
      border-radius: 1.5rem; /* 24px */
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
      padding: 20px;
      text-align: auto;
      transition: transform 0.2s ease-in-out;
      border: 2px solid rgb(255, 255, 255); /* white border */
    }
    
    .btn-card {
      display: inline-block;
      padding: 20px;
      background-color: #1F2937;
      border-radius: 1.5rem; /* 24px */
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
      text-align: center;
      transition: transform 0.2s ease-in-out;
      border: 2px solid rgb(255, 255, 255); /* white border */
      color: white;
      text-decoration: none;
      font-weight: bold;
    }
    </style>
    
    <Layout {meta}>
      <section>
        <div class="max-w-6xl mx-auto px-4 sm:px-6">
          <div class="py-10 md:py-20">
            <div class="text-center pb-5 md:pb-5 max-w-5xl mx-auto">
              <Icon name={icon} class="w-20 h-20 inline-block align-text-bottom rounded-full" />
              <h1 class="text-5xl md:text-[3.50rem] font-bold leading-tighter tracking-tighter mb-4 font-heading">
                Service {name}
              </h1>
              <a class="btn-card" href={stake} target="_blank">
                Stake with me
              </a>
            </div>
            <section class="bg-primary-100 dark:bg-slate-800 items-center">
              <div class="bg-transparent px-4 sm:px-6 py-4 text-md text-center font-medium">
                <li>
                  <span class="font-bold">Network Type:</span> {network}
                </li>
                <li>
                  <span class="font-bold">Chain-id:</span> {chain}
                </li>
                {social.map((item) => (
                  <a href={item.href} target="_blank" rel="noopener noreferrer" key={item.label}>
                    <Icon name={item.icon} class="w-8 h-7 inline-block align-text-bottom" />
                  </a>
                ))}
              </div>
            </section>
            <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 items-start my-10 dark:text-white">
              {items.map(({ title, Link }) => (
                <a href={Link} target={title === 'Explorer' || title === 'Stake with me' ? '_blank' : '_self'}>
                  <div class="card">
                    <div class="flex items-center mb-4 text-center">
                      <div class="ml-4 text-xl font-bold text-center">{title}</div>
                    </div>
                  </div>
                </a>
              ))}
            </div>
          </div>
        </div>
      </section>
    </Layout>


